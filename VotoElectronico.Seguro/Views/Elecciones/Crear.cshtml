@model VotoElectronico.Seguro.Models.Eleccion

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-top: 6px solid #CC0000 !important;">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4" style="color: #CC0000;">
                        Configurar Nueva Elección
                    </h2>
                    <hr />

                    <form asp-action="Crear" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre de la Elección</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaInicio" class="form-label fw-bold">Fecha de Inicio</label>
                                <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
                                <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaFin" class="form-label fw-bold">Fecha de Cierre</label>
                                <input asp-for="FechaFin" type="datetime-local" class="form-control" />
                                <span asp-validation-for="FechaFin" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label fw-bold">Tipo de Elección</label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="INDIVIDUAL">INDIVIDUAL (Candidatos sueltos)</option>
                                <option value="PLANCHA">PLANCHA (Listas Políticas / Partidos)</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold">Estado Inicial</label>
                            <select asp-for="Estado" class="form-select">
                                <option value="CREADA">CREADA</option>
                                <option value="PROGRAMADA">PROGRAMADA</option>
                                <option value="ABIERTA">ABIERTA</option>
                            </select>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold rounded-pill">
                                GUARDAR ELECCIÓN
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-link text-muted mt-2 text-decoration-none">
                                Volver al Menú
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}