@model IEnumerable<VotoElectronico.Seguro.Models.Eleccion>
@{
    ViewData["Title"] = "Elecciones Disponibles";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Procesos Electorales UTN</h1>
        <p class="lead text-muted">Seleccione la elección en la que desea participar</p>
    </div>

    <div class="row justify-content-center">
        @if (Model == null || !Model.Any())
        {
            <div class="col-md-8 text-center">
                <div class="alert alert-info shadow-sm">
                    <i class="bi bi-info-circle"></i> No hay elecciones abiertas en este momento.
                </div>
            </div>
        }
        else
        {
            @foreach (var e in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 border-top border-danger border-4">
                        <div class="card-body text-center">
                            <h4 class="card-title fw-bold">@e.Nombre</h4>
                            <p class="card-text small text-muted">@e.Descripcion</p>

                            <a asp-action="Papeleta" asp-route-idEleccion="@e.IdEleccion"
                               class="btn btn-danger w-100 rounded-pill shadow-sm">
                                <i class="bi bi-pencil-square"></i> Ingresar a Votar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>