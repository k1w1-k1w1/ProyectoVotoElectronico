@model VotoElectronico.Seguro.Models.ListaPoliticaViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="border-top: 6px solid #CC0000 !important;">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4" style="color: #CC0000;">
                        Registrar Nueva Lista Política
                    </h2>
                    <hr />

                    <form asp-action="Crear" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="EleccionId" class="form-label fw-bold">Elección</label>
                            <select asp-for="EleccionId" class="form-select" asp-items="ViewBag.Elecciones">
                                <option value="">-- Seleccione la Elección --</option>
                            </select>
                            <span asp-validation-for="EleccionId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreLista" class="form-label fw-bold">Nombre de la Lista o Partido</label>
                            <input asp-for="NombreLista" class="form-control"/>
                            <span asp-validation-for="NombreLista" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción / Propuesta</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FotoLogo" class="form-label fw-bold">Logo Oficial</label>
                            <input asp-for="FotoLogo" type="file" class="form-control" accept="image/*" />
                            <div class="form-text"></div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-lg fw-bold rounded-pill text-white" style="background-color: #CC0000;">
                                GUARDAR LISTA
                            </button>
                            <a asp-action="Index" asp-controller="Elecciones" class="btn btn-link text-muted mt-2 text-decoration-none">
                                Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}