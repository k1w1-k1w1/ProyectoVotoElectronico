@model IEnumerable<ProyectoVotoElectronico.ListaPolitica>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #CC0000; font-weight: bold;">Listas Políticas Registradas</h2>
        <a asp-action="Crear" class="btn text-white px-4 shadow-sm" style="background-color: #CC0000; border-radius: 20px;">
            Nueva Lista
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead style="background-color: #f8f9fa;">
                    <tr>
                        <th class="ps-4">Logo</th>
                        <th>Nombre de la Lista</th>
                        <th>Descripción</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                @if (!string.IsNullOrEmpty(item.UrlLogo))
                                {
                                    if (item.UrlLogo.StartsWith("http"))
                                    {
                                        <img src="@item.UrlLogo" alt="Logo" class="rounded-circle shadow-sm"
                                             style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #CC0000;" />
                                    }
                                    else
                                    {
                                        var rutaSegura = item.UrlLogo.StartsWith("/") ? item.UrlLogo : "/" + item.UrlLogo;
                                        <img src="@Url.Content("~" + rutaSegura)" alt="Logo" class="rounded-circle shadow-sm"
                                             style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #CC0000;" />
                                    }
                                }
                                else
                                {
                                    <img src="/img/default-logo.png" class="rounded-circle" style="width: 50px;" />
                                }
                            </td>
                            <td class="fw-bold">@item.NombreLista</td>
                            <td>@item.Descripcion</td>
                            <td class="text-center">
                                <a asp-action="Eliminar" asp-route-id="@item.Idlista" class="btn btn-sm btn-outline-danger shadow-sm"
                                   onclick="return confirm('¿Estás seguro de que deseas eliminar esta lista política?');">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>