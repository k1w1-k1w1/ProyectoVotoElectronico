@model VotoElectronico.Seguro.Models.CandidatoCreateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0" style="border-top: 6px solid #CC0000 !important;">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4" style="color: #CC0000;">
                        Registrar Candidato 
                    </h2>

                    <hr />

                    <form asp-action="Crear" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Elección a la que pertenece</label>
                            <select asp-for="IdEleccion" class="form-select shadow-sm" asp-items="ViewBag.Elecciones">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="IdEleccion" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Cargo </label>

                            <select id="selectCargo" class="form-select mb-2">
                                <option value=""></option>
                                <option value="Presidente">Presidente</option>
                                <option value="Vicepresidente">Vicepresidente</option>
                                <option value="Vocal">Vocal</option>
                                <option value="Otro">Otro (Especificar...)</option>
                            </select>

                            <input type="text" asp-for="Cargo" id="inputCargoManual"
                                   class="form-control d-none" placeholder="Escriba el nombre del cargo" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre</label>
                                <input asp-for="Nombre" class="form-control"/>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Apellido</label>
                                <input asp-for="Apellido" class="form-control"/>
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Propuesta de Campaña</label>
                            <textarea asp-for="Propuesta" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Propuesta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Foto del Candidato</label>
                            <input asp-for="Foto" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Foto" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Lista Política</label>
                            <select asp-for="ListaPoliticaId" class="form-select shadow-sm"
                                    asp-items="ViewBag.ListasPoliticas" required>
                                <option value="">-- Seleccione una Lista --</option>
                            </select>
                            <span asp-validation-for="ListaPoliticaId" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold rounded-pill shadow">
                                GUARDAR CANDIDATO
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-link text-muted mt-2 text-decoration-none">
                                Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const selectCargo = document.getElementById('selectCargo');
        const inputCargoManual = document.getElementById('inputCargoManual');

        selectCargo.addEventListener('change', function () {
            if (this.value === 'Otro') {
                inputCargoManual.classList.remove('d-none');
                inputCargoManual.value = '';
                inputCargoManual.focus();
            } else {
                inputCargoManual.classList.add('d-none');
                inputCargoManual.value = this.value;
            }
        });

        document.querySelector('form').addEventListener('submit', function() {
            if (selectCargo.value !== 'Otro') {
                inputCargoManual.value = selectCargo.value;
            }
        });
    </script>
}