@model VotoElectronico.Seguro.Models.CandidatoCreateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0" style="border-top: 6px solid #CC0000 !important;">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4" style="color: #CC0000;">
                        <i class="bi bi-person-plus-fill"></i> Registrar Candidato UTN
                    </h2>

                    <hr />

                    <form asp-action="Crear" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Elección a la que pertenece</label>
                            <select asp-for="IdEleccion" class="form-select shadow-sm" asp-items="ViewBag.Elecciones">
                                <option value="">-- Seleccione una Elección --</option>
                            </select>
                            <span asp-validation-for="IdEleccion" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Arturo" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Apellido</label>
                                <input asp-for="Apellido" class="form-control" placeholder="Ej: González" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Propuesta de Campaña</label>
                            <textarea asp-for="Propuesta" class="form-control" rows="3" placeholder="Describe los planes del candidato..."></textarea>
                            <span asp-validation-for="Propuesta" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Foto del Candidato</label>
                            <input asp-for="Foto" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Foto" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold rounded-pill shadow">
                                <i class="bi bi-save"></i> GUARDAR CANDIDATO
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-link text-muted mt-2 text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}