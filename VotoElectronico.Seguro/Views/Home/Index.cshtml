@{
    ViewData["Title"] = "Inicio";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 75vh;">
    <div class="text-center p-5 shadow-lg rounded-4 bg-white border" style="max-width: 700px; border-top: 6px solid #CC0000 !important;">

        <i class="bi bi-shield-check text-success" style="font-size: 4rem;"></i>

        <h1 class="fw-bold mb-3">Sistema Ecuatoriano de Voto Seguro</h1>

        <p class="lead mb-4">
            Bienvenido, <strong>@User.Identity?.Name</strong>.
            <br /> <span class="text-muted small">Su participación fortalece la democracia en la UTN.</span>
        </p>

        <div class="d-grid gap-3">
            @* BOTÓN PARA VOTANTES Y ADMINS *@
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Votacion" asp-action="Index"
                   class="btn btn-primary btn-lg py-3 fw-bold rounded-pill shadow">
                    <i class="bi bi-patch-check"></i> INGRESAR A LA PAPELETA
                </a>
            }

            @* PANEL EXCLUSIVO PARA ADMINISTRADORES *@
            @if (User.IsInRole("Admin"))
            {
                <hr />
                <div class="bg-light p-3 rounded-3 border">
                    <h6 class="text-danger fw-bold mb-3"><i class="bi bi-gear-fill"></i> PANEL DE ADMINISTRACIÓN</h6>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-controller="Elecciones" asp-action="Crear" class="btn btn-outline-danger btn-sm fw-bold">
                            <i class="bi bi-plus-circle"></i> Crear Elección
                        </a>
                        <a asp-controller="Candidatos" asp-action="Crear" class="btn btn-outline-danger btn-sm fw-bold">
                            <i class="bi bi-person-plus"></i> Añadir Candidatos
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 pt-3 border-top">
            <p class="text-muted small mb-0">
                <i class="bi bi-lock-fill"></i> Conexión cifrada con Hash de Inmutabilidad SHA-256
            </p>
        </div>
    </div>
</div>

<style>
    .transition-hover:hover {
        transform: scale(1.03);
        transition: 0.3s;
        background-color: #0d6efd;
    }
</style>